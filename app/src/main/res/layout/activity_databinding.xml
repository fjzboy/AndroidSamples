<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_databinding"
    tools:context="com.fjz.androidlittlesamples.databindingdemo.DatabindingDemoActivity">

    <data>
        <import type="com.fjz.androidlittlesamples.R"/>
        <import type="android.view.View.OnClickListener" />
        <import type="android.databinding.ObservableBoolean" />
        <import type="android.databinding.ObservableField" />

        <variable
            name="state"
            type="ObservableBoolean" />

        <variable
            name="name"
            type="String" />

        <variable
            name="imgUrl"
            type="ObservableField" />

        <variable
            name="handler"
            type="OnClickListener" />
        
        

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{handler}"
            android:text="Test"/>

        <!--@mipmap/yuanfeng_pressed无效-->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:src="@{state.get() ? @drawable/yuanfen_pressed : @drawable/yuanfen_normal}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{name}"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:image="@{(String)imgUrl.get()}"/>

        <Button
            android:id="@+id/btn_enter_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{handler}"
            android:text="Binding RecyclerView"/>


    </LinearLayout>

</layout>
